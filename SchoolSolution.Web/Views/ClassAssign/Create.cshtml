@model SchoolSolution.Web.ViewModels.ClassAssignModel
@using SchoolSolution.Web.Models
@using SchoolSolution.Web.Code
@{
    ViewData["Title"] = "Professeur";
}

<div class="top-buffer"></div>

<form asp-action="Create" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Assigner Classe" })
    <div class="modal-body form-horizontal">

        <h3>@Model.Teacher.FullName</h3>
        <h4>Choisir la classe du TItulaire</h4>
        <input asp-for="TeacherId" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ClassId" class="col-md-2 control-label">Classe</label>
            <div class="col-md-5">
                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
        </div>

    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>



