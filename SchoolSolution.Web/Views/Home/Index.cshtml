@model SchoolSolution.Web.ViewModels.OverViewModel
@{
    ViewBag.Title = "Dashboard";
}

<div class="row">
    <div class="col-lg-12">
        <img src="~/images/LemonEcole.png" class="img-responsive"/>
    </div>
</div>
 <h1 class="page-header">Dashboard</h1>

          <div class="row placeholders">
            <div class="col-xs-6 col-sm-3 placeholder">
              <div class="panel panel-primary">
                  <div class="panel-heading"><h1>Sections</h1></div>
                  <div class="panel-body">
                      <h1>@Model.DepCount</h1>
                  </div>
              </div>
              
              
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
              <div class="panel panel-info">
                  <div class="panel-heading"><h1>Classes</h1></div>
                  <div class="panel-body">
                      <h1>@Model.ClassCount</h1>
                  </div>
              </div>
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
              <div class="panel panel-success">
                  <div class="panel-heading"><h1>Elèves</h1></div>
                  <div class="panel-body">
                      <h1>@Model.StudentCount</h1>
                  </div>
              </div>
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
              <div class="panel panel-warning">
                  <div class="panel-heading"><h1>Professeurs</h1></div>
                  <div class="panel-body">
                      <h1>@Model.TeacherCount</h1>
                  </div>
              </div>
            </div>
          </div>