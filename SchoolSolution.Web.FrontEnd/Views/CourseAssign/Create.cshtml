@model SchoolSolution.Web.FrontEnd.ViewModels.CourseAssignModel
@using SchoolSolution.Web.FrontEnd.Models
@using SchoolSolution.Web.FrontEnd.Code
@{
    ViewData["Title"] = "Professeur";
}



<form asp-action="Create" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Attribution Cours" })
    <div class="modal-body form-horizontal">

        <h3>@Model.Teacher.FullName</h3>
        <h4>Choisir les cours du professeur</h4>
        <input asp-for="TeacherId" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   
        <div class="row">
            <div class="container">
                
                    <div class="checkbox col-sm-9">
                        @for (int i = 0; i < Model.Courses.Count(); i++)
                        {

                            <input asp-for="@Model.Courses[i].CheckboxAnswer" type="checkbox" />
                            <label asp-for="@Model.Courses[i].Id">@Model.Courses[i].Name</label>
                            <input asp-for="@Model.Courses[i].Id" type="hidden" />
                            <input asp-for="@Model.Courses[i].Name" type="hidden" />
                            <br />

                        }
                    </div>
                
            </div>
        </div>

    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>



