@model SchoolSolution.Web.FrontEnd.ViewModels.ClasseCourseModel
@using SchoolSolution.Web.FrontEnd.Models


@{ 
    ViewBag.Title = "Encodage Côtes";
}
<form asp-action="Create" asp-controller="ClasseCourse" method="post" role="form">
    @await  Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Ajouter Cours"})
    <div class="modal-body form-horizontal">
        <h3>@Model.Classe.Name</h3>
        <h4>Choisir les cours à ajouter</h4>
        <input asp-for="ClassId" type="hidden" />
        <div class="row">
            <div class="container">
                <div class="checkbox col-sm-9">
                        @for (int i = 0; i < Model.Courses.Count(); i++)
                        {

                            <input asp-for="@Model.Courses[i].CheckboxAnswer" type="checkbox" />
                            <label asp-for="@Model.Courses[i].Id">@Model.Courses[i].Name</label>
                            <input asp-for="@Model.Courses[i].Id" type="hidden" />
                            <input asp-for="@Model.Courses[i].Name" type="hidden" />
                            <br />

                        }
                    </div>
            </div>
        </div>
    </div>
    @await  Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>